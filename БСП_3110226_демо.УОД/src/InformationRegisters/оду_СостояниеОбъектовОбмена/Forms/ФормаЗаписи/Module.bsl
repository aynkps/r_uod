	Если ЗначениеЗаполнено(Запись.ИДОбъекта) Тогда
		Если (Запись.РежимОбмена = оду_ОбщийПовтИсп.РежимВыгрузка() ИЛИ Запись.РежимОбмена = оду_ОбщийПовтИсп.РежимЗапросСсылки() ИЛИ Запись.РежимОбмена = оду_ОбщийПовтИсп.РежимЗапросДвижений())
				И ЗначениеЗаполнено(Запись.ТипXMLОбъектаИсточника)  Тогда
			Объект1С = пр_Общий.СсылкаПоТипXML(Запись.ТипXMLОбъектаИсточника, Запись.ИДОбъекта);
		ИначеЕсли  Запись.РежимОбмена = оду_ОбщийПовтИсп.РежимЗагрузка() И ЗначениеЗаполнено(Запись.ТипXMLОбъектаПриемника) Тогда 	
			Объект1С = пр_Общий.СсылкаПоТипXML(Запись.ТипXMLОбъектаПриемника, Запись.ИДОбъекта);
		КонецЕсли; 
	КонецЕсли;

	ИсточникУО = пр_Общий.СсылкаПоТипXML("CatalogRef.оду_БазыУчастникиОбмена", Запись.ИДБазыИсточник); 
	ПриемникУО = пр_Общий.СсылкаПоТипXML("CatalogRef.оду_БазыУчастникиОбмена", Запись.ИДБазыПриемник);  
	Если ЗначениеЗаполнено(ПриемникУО) Тогда
		НаименованиеПриемника = пр_Общий.ЗначениеРеквизитаПоСсылке(ПриемникУО, "Наименование"); 
	КонецЕсли;
	
